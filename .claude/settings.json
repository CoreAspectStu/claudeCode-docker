    "includeCoAuthoredBy": false,
    "permissions": {
      "allow": [
        "Read(~/.zshrc)",
        "Bash(ls:*)",
        "Bash(find:*)",
        "Bash(grep:*)",
        "Bash(awk:*)",
        "Bash(sed:*)"
      ]
    },
    "model": "sonnet",
    "env": {
      "BASH_DEFAULT_TIMEOUT_MS": "86400000", // 24 hours
      "BASH_MAX_TIMEOUT_MS": "86400000" // 24 hours
    }
  }